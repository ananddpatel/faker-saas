<!DOCTYPE html>
<html lang="en">
  <% include ../partials/head %>
  <body>
    <% include ../partials/nav %>
    <div class="container-fluid mt-2">
      <div id="app">

        <div v-if="error" class="container text-center alert alert-danger">{{error}}</div>
        
        <div class="row">
          <div class="col-12 col-md-2">

            <div class="row">

              <div v-if="groups" v-for="(group, index) in groups" :key="index" class="col-12 accordion" id="group-accordian">
                  <div class="card">
                    <div class="card-header" :id="'group' + index">
                      <h5 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse" :data-target="'#methods' + index" aria-expanded="false" aria-controls="'methods' + index">
                            {{group}} ({{fakerMethods[group].length}})
                        </button>
                      </h5>
                    </div>
                
                    <div :id="'methods' + index" class="collapse" :aria-labelledby="'group' + index" data-parent="#group-accordian">
                      <div class="card-body">
                          <button
                          class="m-1 btn btn-sm"
                          v-for="(method, index) in fakerMethods[group]"
                          :key="index"
                          @click="selectMethod(method)"
                          :class="{'btn-info': method.selected}">{{method.name}}
                        </button>
                      </div>
                    </div>
                  </div>
                </div>



            </div>

          </div>
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script> -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js"></script>
    <script src="/public/js/main.js"></script>
  </body>
</html>
